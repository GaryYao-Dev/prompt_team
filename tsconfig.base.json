{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/utils/*": [
        "packages/utils/src/*"
      ],
      "@shared/types/*": [
        "packages/types/src/*"
      ]
    },
    "composite": true
  },
  "references": [
    {
      "path": "./packages/utils"
    },
    {
      "path": "./packages/types"
    }
  ]
}